{
  "manifest_version": 3,
  "name": "Go Dodo - Task Manager",
  "version": "1.0.0",
  "description": "A beautiful and productive task manager with nature-inspired design",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Go Dodo - Task Manager",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  }
}
